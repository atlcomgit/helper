{
    "name": "atlcom/helper",
    "type": "library",
    "description": "Atlcom Helper library",
    "require": {
        "php": "^8.1",
        "ext-mbstring": "*",
        "nesbot/carbon": ">=2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "fakerphp/faker": "^1.23"
    },
    "autoload": {
        "psr-4": {
            "Atlcom\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Atlcom\\Tests\\": "tests"
        }
    },
    "archive": {
        "exclude": [".idea", "composer.lock"]
    }
}
